<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layoutDirection="rtl">

    <LinearLayout
        android:id="@+id/ServiceConditions_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:textColor="@color/white_color"
            android:text="شروط اضافة اعلان"
            android:textSize="@dimen/text_size_medium_20"
            android:background="@drawable/button_yellow_2" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ServiceConditions_RelativeLayout"
        android:layout_below="@id/ServiceConditions_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:paddingLeft="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_32"
        android:paddingRight="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_32">

        <ImageView
            android:id="@+id/ServiceConditions_ImageView_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/cancel"/>
        <ProgressBar
            android:id="@+id/ServiceConditions_ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ServiceConditions_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_16">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ServiceConditions_RelativeLayout"
        android:layout_marginTop="-16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ServiceConditions_ImageView_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ok" />


    </LinearLayout>
</RelativeLayout>