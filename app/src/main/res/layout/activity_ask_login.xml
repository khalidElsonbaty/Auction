<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".ui.activity.AskLoginActivity">
    <ImageView
        android:id="@+id/Ask_Login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen_120"
        android:src="@drawable/logoo" />

    <Button
        android:id="@+id/Ask_Login_Button_Login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@+id/Ask_Login_logo"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_200"
        android:layout_marginEnd="@dimen/dimen_24"
        android:background="@drawable/button_yellow_2"
        android:fontFamily="@font/cairo"
        android:textColor="@color/white_color"
        android:text="تسجيل دخول"
        android:textSize="@dimen/text_size_medium_20" />

    <Button
        android:id="@+id/Ask_Login_Button_Register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@+id/Ask_Login_Button_Login"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/margin_padding_normal_20"
        android:layout_marginEnd="@dimen/dimen_24"
        android:alpha=".6"
        android:background="@drawable/button_custom_blur"
        android:fontFamily="@font/cairo"
        android:textColor="@color/white_color"
        android:text="تسجيل جديد"
        android:textSize="@dimen/text_size_medium_20" />

</RelativeLayout>