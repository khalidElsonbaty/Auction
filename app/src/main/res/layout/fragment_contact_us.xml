<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:layoutDirection="rtl"
    tools:context=".ui.fragment.navigationCycle.ContactUsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_24"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_24"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Contact_Us_EditText_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/details_font"
                    android:hint="الاسم"
                    android:inputType="text"
                    android:paddingStart="@dimen/dimen_16"
                    android:textAlignment="viewStart" />

                <EditText
                    android:id="@+id/Contact_Us_EditText_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/details_font"
                    android:hint="البريد الاكتروني"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/dimen_16"
                    android:textAlignment="viewStart" />


                <EditText
                    android:id="@+id/Contact_Us_EditText_Message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_120"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/button_white"
                    android:fontFamily="@font/details_font"
                    android:hint="اكتب رسالتك"
                    android:inputType="text"
                    android:paddingStart="@dimen/dimen_16"
                    android:textAlignment="viewStart" />


                <Button
                    android:id="@+id/Contact_Us_Button_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_80"
                    android:layout_marginBottom="@dimen/dimen_24"
                    android:background="@drawable/button_yellow_2"
                    android:fontFamily="@font/cairo"
                    android:text="ارسال"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>