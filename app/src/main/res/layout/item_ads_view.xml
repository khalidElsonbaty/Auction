<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/gray"
    android:layoutDirection="rtl">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="@dimen/margin_padding_tiny_4"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/dimen_8"
        app:cardElevation="@dimen/dimen_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Ads_Civ_product_Image"
                    android:layout_width="@dimen/dimen_72"
                    android:layout_height="@dimen/dimen_72"
                    android:layout_gravity="center"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/gold"
                    app:civ_border_width="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dimen_4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Ads_TextView_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/details_font"
                        android:text="اسم العرض"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/text_size_title_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Ads_TextView_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/details_font"
                        android:text="منطقة العرض"
                        android:textSize="@dimen/text_size_small_10"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Ads_TextView_Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/details_font"
                        android:paddingBottom="@dimen/dimen_4"
                        android:text="تفاصيل"
                        android:textSize="@dimen/text_size_small_10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Ads_TextView_Time"
                        android:layout_width="@dimen/dimen_32"
                        android:layout_height="@dimen/dimen_32"
                        android:background="@drawable/button_gray"
                        android:text="منذ 2 ساعة"
                        android:textAlignment="center"
                        android:textSize="@dimen/text_size_small_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end|bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Ads_ImageView_delete"
                        android:layout_width="@dimen/dimen_32"
                        android:layout_height="@dimen/dimen_32"
                        android:background="@drawable/button_gray"
                        android:scaleType="center"
                        android:src="@drawable/cancel" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.CardView>