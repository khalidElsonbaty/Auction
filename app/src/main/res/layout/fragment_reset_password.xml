<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    android:layoutDirection="rtl"
    tools:context=".ui.fragment.loginCycle.ResetPasswordFragment">

    <ImageView
        android:id="@+id/Reset_Password_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen_120"
        android:src="@drawable/logoo" />

    <LinearLayout
        android:id="@+id/Reset_Password_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Reset_Password_logo"
        android:layout_marginLeft="@dimen/dimen_32"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_32"
        android:orientation="vertical">
        <EditText
            android:id="@+id/Reset_Password_EditText_Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".6"
            android:background="@drawable/edit_text_rounded_corners"
            android:fontFamily="@font/details_font"
            android:hint="@string/reset_password_hint_code"
            android:inputType="textPassword"
            android:paddingStart="@dimen/dimen_16"
            android:textAlignment="textEnd"
            android:textColor="@color/white_color"
            android:textColorHint="@color/white_color"
            android:textSize="@dimen/text_size_small_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            >

            <ImageView
                android:id="@+id/Reset_Password_imageView_passwordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/dimen_4"
                android:alpha=".6"
                android:background="@drawable/edit_text_rounded_corners"
                android:padding="8dp"
                android:src="@drawable/menulock"
                android:tint="@color/white_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Reset_Password_imageView_passwordIcon"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Reset_Password_imageView_passwordIcon"
                android:alpha=".6"
                android:background="@drawable/edit_text_rounded_corners"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Reset_Password_EditText_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/details_font"
                    android:hint="@string/reset_password_hint_password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/dimen_16"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/text_size_small_15" />

                <ImageView
                    android:id="@+id/Reset_Password_imageView_ShowPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="@dimen/dimen_8"
                    android:src="@drawable/eye" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            >

            <ImageView
                android:id="@+id/Reset_Password_imageView_RePasswordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/dimen_4"
                android:alpha=".6"
                android:background="@drawable/edit_text_rounded_corners"
                android:padding="8dp"
                android:src="@drawable/menulock"
                android:tint="@color/white_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Reset_Password_imageView_RePasswordIcon"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Reset_Password_imageView_RePasswordIcon"
                android:alpha=".6"
                android:background="@drawable/edit_text_rounded_corners"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Reset_Password_EditText_RePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/details_font"
                    android:hint="@string/reset_password_hint_repassword"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/dimen_16"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white_color"
                    android:textColorHint="@color/white_color"
                    android:textSize="@dimen/text_size_small_15" />

                <ImageView
                    android:id="@+id/Reset_Password_imageView_ShowRePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="@dimen/dimen_8"
                    android:src="@drawable/eye" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Reset_Password_Button_Done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@+id/Reset_Password_LinearLayout"
        android:layout_marginStart="@dimen/dimen_24"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_24"
        android:background="@drawable/button_yellow_2"
        android:fontFamily="@font/cairo"
        android:text="@string/reset_password_button_done"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_large_24" />


</RelativeLayout>