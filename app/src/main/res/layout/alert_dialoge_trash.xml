<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Trust_RelativeLayout_Contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/Trust_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_off_white1"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_32"
        android:padding="@dimen/dimen_32"
        android:gravity="center">

        <TextView
            android:id="@+id/Trust_TextView_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimen_8"
            android:text="هل تريد حذف الرسالة ؟!"
            android:textSize="@dimen/text_size_medium_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Trust_TextView_question"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Trust_ImageView_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:background="@drawable/cancell" />

            <View
                android:layout_width="@dimen/dimen_1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_marginBottom="@dimen/dimen_4"
                android:background="@color/white_color" />

            <ImageView
                android:id="@+id/Trust_ImageView_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_16"
                android:background="@drawable/mark"/>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>