<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".ui.fragment.navigationCycle.ShareFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dimen_64"
            android:layout_marginEnd="@dimen/dimen_64">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مشاركة التطبيق عبر"
                android:textSize="@dimen/text_size_large_24"
                android:fontFamily="@font/cairo"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/Share_Button_Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_32"
                android:paddingStart="@dimen/dimen_16"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_small_15"
                android:drawableStart="@drawable/face"
                android:background="@drawable/button_face_book"
                android:fontFamily="@font/cairo"
                android:text="فيس بوك"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Share_Button_Twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:paddingStart="@dimen/dimen_16"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_small_15"
                android:drawableStart="@drawable/twitter"
                android:background="@drawable/button_twitter"
                android:fontFamily="@font/cairo"
                android:text="تويتر"
                android:textStyle="bold" />
            <Button
                android:id="@+id/Share_Button_Google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:paddingStart="@dimen/dimen_16"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_small_15"
                android:drawableStart="@drawable/google"
                android:background="@drawable/button_google"
                android:fontFamily="@font/cairo"
                android:text="جوجل بلس"
                android:textStyle="bold" />
            <Button
                android:id="@+id/Share_Button_WhatsUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:paddingStart="@dimen/dimen_16"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_small_15"
                android:background="@drawable/button_whatsapp"
                android:drawableStart="@drawable/whatts"
                android:fontFamily="@font/cairo"
                android:text="واتس"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>