<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/item_Comment_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_Comment_Civ_product_Image"
            android:padding="@dimen/dimen_2"
            android:layout_width="@dimen/dimen_72"
            android:layout_height="@dimen/dimen_72"
            android:layout_gravity="center"
            android:src="@drawable/user"
            app:civ_border_color="@color/gold"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dimen_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_Comment_TextView_Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/details_font"
                android:text="اسم العرض"
                android:layout_weight="1"
                android:textColor="@color/gold"
                android:textSize="@dimen/text_size_small_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_Comment_TextView_Time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/details_font"
                android:text="منذ 3 ساعات"
                android:textAlignment="textEnd"
                android:layout_marginEnd="@dimen/dimen_8"
                android:layout_weight=".5"
                android:textSize="@dimen/text_size_title_12"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_Comment_TextView_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/details_font"
                android:text="منطقة العرض"
                android:textSize="@dimen/text_size_small_10"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_below="@id/item_Comment_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2"
        android:layout_margin="@dimen/dimen_8"
        android:background="@color/view_color" />

</RelativeLayout>